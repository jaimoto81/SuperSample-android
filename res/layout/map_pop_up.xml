<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/map_popup_shape"
    android:stretchColumns="1,3" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">

    <ImageView
        android:paddingLeft="15dp"
        android:id="@+id/mapPopup_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo" />

    <TableLayout
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_toRightOf="@id/mapPopup_user_image" android:layout_marginLeft="15dp" android:layout_centerVertical="true">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="User:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mapPopup_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/logo"
                android:layout_centerHorizontal="true"
                android:text="Status: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mapPopup_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/mapPopup_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/user_info"
        android:src="@drawable/x" 
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp" 
        android:layout_marginRight="5dp"/>

</RelativeLayout>