<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quickblox.supersamples"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <activity
            android:label="@string/app_name"
            android:name=".main.activities.StartActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.activities.LoginActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".main.activities.RegistrationActivity" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".main.activities.MapViewActivity" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.activities.TabsActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".main.activities.ChatActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".main.activities.QuizActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".main.activities.SettingsActivity" 
            android:screenOrientation="portrait">
        </activity>
        
        <uses-library android:name="com.google.android.maps" />
    </application>
    
    <uses-sdk android:minSdkVersion="4" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>